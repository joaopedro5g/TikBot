{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es5",
    "allowJs": true,
    "moduleResolution": "node",
    "resolveJsonModule": true
  },
  "include": [
    "src" // <-- change this to where your source files are
, "src/robots"  ],
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  }
}